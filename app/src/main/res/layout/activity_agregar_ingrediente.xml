<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarIngredienteActivity">

    <ImageView
        android:id="@+id/rectangle_nombre_ingrediente_image"
        android:layout_width="285dp"
        android:layout_height="70dp"
        android:layout_marginTop="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/retangle" />

    <EditText
        android:id="@+id/nombre_ingrediente_text"
        android:layout_width="285dp"
        android:layout_height="70dp"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:hint="NOMBRE INGREDIENTE"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tipo_button"
        android:layout_width="285dp"
        android:layout_height="80dp"
        android:layout_marginTop="42dp"
        android:backgroundTint="#FFFFFF"
        android:gravity="left|center_vertical"
        android:onClick="popupTipoMostrar"
        android:text="Tipo"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagen_ingrediente_button"
        app:strokeColor="#000000"
        app:strokeWidth="5sp" />

    <Button
        android:id="@+id/sabor_button"
        android:layout_width="285dp"
        android:layout_height="80dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#FFFFFF"
        android:gravity="left|center_vertical"
        android:onClick="popupSaborMostrar"
        android:text="Sabor"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipo_button"
        app:strokeColor="#000000"
        app:strokeWidth="5sp" />

    <Button
        android:id="@+id/salvar_button"
        android:layout_width="165dp"
        android:layout_height="72dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#000000"
        android:gravity="left|center_vertical"
        android:onClick="checkIngrediente"
        android:text="GUARDAR"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.743"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sabor_button" />

    <ImageView
        android:id="@+id/ingrediente_image"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toEndOf="@+id/imagen_ingrediente_button"
        app:layout_constraintTop_toBottomOf="@+id/nombre_ingrediente_text" />

    <Button
        android:id="@+id/imagen_ingrediente_button"
        android:layout_width="205dp"
        android:layout_height="80dp"
        android:layout_marginTop="42dp"
        android:backgroundTint="#FFFFFF"
        android:gravity="left|center_vertical"
        android:onClick="seleccionarImagen"
        android:text="IMAGEN"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre_ingrediente_text"
        app:strokeColor="#000000"
        app:strokeWidth="5sp" />

</androidx.constraintlayout.widget.ConstraintLayout>