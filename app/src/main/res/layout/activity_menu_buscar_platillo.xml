<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuBuscarPlatilloActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp"
            tools:context=".MenuBuscarPlatilloActivity">

            <Button
                android:id="@+id/buscar_ingrediente_secundario_button"
                android:layout_width="205dp"
                android:layout_height="80dp"
                android:layout_marginTop="36dp"
                android:backgroundTint="#FFFFFF"
                android:gravity="left|center_vertical"
                android:onClick="buscarIngredienteSecundario"
                android:text="Ingrediente Secundario"
                android:textColor="#000000"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.199"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buscar_ingrediente_principal_button"
                app:strokeColor="#000000"
                app:strokeWidth="3sp" />

            <Button
                android:id="@+id/buscar_platillo_tiempo_button"
                android:layout_width="285dp"
                android:layout_height="80dp"
                android:layout_marginTop="36dp"
                android:backgroundTint="#FFFFFF"
                android:gravity="left|center_vertical"
                android:onClick="popupTiempoMostrar"
                android:text="Tiempo"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buscar_platillo_tipo_button"
                app:strokeColor="#000000"
                app:strokeWidth="3sp" />

            <Button
                android:id="@+id/buscar_platillo_tipo_button"
                android:layout_width="285dp"
                android:layout_height="80dp"
                android:layout_marginTop="36dp"
                android:backgroundTint="#FFFFFF"
                android:gravity="left|center_vertical"
                android:onClick="popupTipoMostrar"
                android:text="Tipo"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buscar_ingrediente_secundario_button"
                app:strokeColor="#000000"
                app:strokeWidth="3sp" />

            <Button
                android:id="@+id/buscar_ingrediente_principal_button"
                android:layout_width="205dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#FFFFFF"
                android:gravity="left|center_vertical"
                android:onClick="buscarIngredientePrincipal"
                android:text="Ingrediente Principal"
                android:textColor="#000000"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.189"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="#000000"
                app:strokeWidth="3sp" />

            <Button
                android:id="@+id/buscar_platillo_button"
                android:layout_width="145dp"
                android:layout_height="72dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="#000000"
                android:gravity="left|center_vertical"
                android:onClick="buscarPlatillo"
                android:text="BUSCAR"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buscar_platillo_tiempo_button" />

            <ImageView
                android:id="@+id/buscar_ingrediente_principal_imagen"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="36dp"
                app:layout_constraintStart_toEndOf="@+id/buscar_ingrediente_principal_button"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/buscar_ingrediente_secundario_imagen"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="44dp"
                app:layout_constraintStart_toEndOf="@+id/buscar_ingrediente_secundario_button"
                app:layout_constraintTop_toBottomOf="@+id/buscar_ingrediente_principal_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>