<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuBuscarPlatilloActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".MenuBuscarPlatilloActivity">

            <Button
                android:id="@+id/menu_buscar_platillo_ingrediente_principal_btn"
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="112dp"
                android:backgroundTint="?attr/colorOnPrimary"
                android:gravity="start|center_vertical"
                android:onClick="buscarIngredientePrincipal"
                android:text="Ingrediente Principal"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="?attr/colorOnSecondary"
                app:strokeWidth="3sp" />

            <ImageView
                android:id="@+id/menu_buscar_platillo_ingrediente_principal_img"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="75dp"
                android:background="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/menu_buscar_platillo_ingrediente_principal_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/menu_buscar_platillo_ingrediente_secundario_btn"
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="112dp"
                android:backgroundTint="?attr/colorOnPrimary"
                android:gravity="start|center_vertical"
                android:onClick="buscarIngredienteSecundario"
                android:text="Ingrediente Secundario"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menu_buscar_platillo_ingrediente_principal_btn"
                app:strokeColor="?attr/colorOnSecondary"
                app:strokeWidth="3sp" />

            <ImageView
                android:id="@+id/menu_buscar_platillo_ingrediente_secundario_img"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="55dp"
                android:background="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/menu_buscar_platillo_ingrediente_secundario_btn"
                app:layout_constraintTop_toBottomOf="@+id/menu_buscar_platillo_ingrediente_principal_img" />

            <Button
                android:id="@+id/menu_buscar_platillo_tipo_btn"
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="?attr/colorOnPrimary"
                android:gravity="start|center_vertical"
                android:onClick="popupTipoMostrar"
                android:text="Tipo"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menu_buscar_platillo_ingrediente_secundario_btn"
                app:strokeColor="?attr/colorOnSecondary"
                app:strokeWidth="3sp" />

            <Button
                android:id="@+id/menu_buscar_platillo_tiempo_btn"
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="?attr/colorOnPrimary"
                android:gravity="start|center_vertical"
                android:onClick="popupTiempoMostrar"
                android:text="Tiempo"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menu_buscar_platillo_tipo_btn"
                app:strokeColor="?attr/colorOnSecondary"
                app:strokeWidth="3sp" />

            <Button
                android:id="@+id/menu_buscar_platillo_btn"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="?attr/colorOnSecondary"
                android:gravity="start|center_vertical"
                android:onClick="buscarPlatillo"
                android:text="BUSCAR"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menu_buscar_platillo_tiempo_btn" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>