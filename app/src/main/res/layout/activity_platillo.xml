<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlatilloActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/agregar_eliminar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#000000"
                android:onClick="agregarEliminar"
                android:text="Agregar"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/receta_text" />

            <TextView
                android:id="@+id/platillo_nombre_text"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:foreground="@drawable/retangle"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/platillo_image"
                android:layout_width="350dp"
                android:layout_height="202dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/platillo_nombre_text" />

            <EditText
                android:id="@+id/ingredientes_text"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:ems="10"
                android:focusable="false"
                android:foreground="@drawable/smaller_rectangle"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:text="Ingredientes:"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/autor_text" />

            <EditText
                android:id="@+id/receta_text"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:background="@null"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:foreground="@drawable/smaller_rectangle"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:text="Receta:"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ingredientes_text" />

            <TextView
                android:id="@+id/autor_text"
                android:layout_width="181dp"
                android:layout_height="29dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.134"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/platillo_image" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>