<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuscarIngredienteActivity">

    <EditText
        android:id="@+id/buscar_ingrediente_text"
        android:layout_width="297dp"
        android:layout_height="39dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Nombre Iingrediente"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.728"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="63dp"
        android:layout_height="54dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#000000"
        android:onClick="buscarIngrediente"
        app:icon="@android:drawable/ic_menu_search"
        app:iconGravity="start"
        app:layout_constraintEnd_toStartOf="@+id/buscar_ingrediente_text"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="141dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#000000"
        android:onClick="agregarIngrediente"
        android:text="Agregar Ingrediente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buscar_ingrediente_text">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvingredientes_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/ingrediente_item" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>